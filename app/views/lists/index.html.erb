<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),  url(https://images.unsplash.com/photo-1513015579021-66c7c008af85?q=80&w=3174&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Movies lists</h1>
    <p>Save your favourite movies</p>
    <%= link_to "Create a new list", new_list_path, :class => "btn btn-flat" %>
  </div>
</div>


<div class="title">
<h5>My lists</h5>
</div>

<% @lists.each do |list| %>
  <div class= "card">
    <div class="img-card" style="width: 18rem;">
    <%= image_tag("list.background_url")%>
    </div>
      <div class="card-body">
        <%= link_to list.name, list_path(list), :class => "btn btn-flat" %>
      </div>
  </div>
<% end %>
