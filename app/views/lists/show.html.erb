<h1><%= @list.name %></h1>

<div class="card" style="width: 18rem;">
  <% @list.bookmarks.each do |bookmark| %>
    <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
      <p class="card-text"> Synopsys:<%= bookmark.movie.overview %></p>
      <p class="card-comment"><%= bookmark.comment %></p>
        <p><%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-primary" %></p>
    </div>
  <% end %>

  </div>
</div>

  <p><%= link_to "Add a bookmark", new_list_bookmark_path(@list), :class => "btn btn-primary" %></p>
  <p><%= link_to "Back to the lists", lists_path, :class => "btn btn-primary" %></p>
